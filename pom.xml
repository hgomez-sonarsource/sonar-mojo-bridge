  <build>
    <plugins>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <configuration>
          <properties>
            <owner>Lars Gohlke</owner>
          </properties>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.sonar</groupId>
        <artifactId>sonar-packaging-maven-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <pluginClass>de.lgohlke.sonar.MavenPlugin</pluginClass>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.sonar</groupId>
        <artifactId>sonar-dev-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>start-server</id>
            <goals>
              <goal>start</goal>
            </goals>
            <phase>pre-integration-test</phase>
            <configuration>
              <runtimeVersion>${sonar.version}</runtimeVersion>
              <background>true</background>
              <database>${test.database}</database>
              <jdbcDriver>${test.jdbcDriver}</jdbcDriver>
              <jdbcUrl>${test.jdbcUrl}</jdbcUrl>
              <configBackup>src/test/resources/sonar_server_config.xml</configBackup>
            </configuration>
          </execution>
          <execution>
            <id>stop-server</id>
            <goals>
              <goal>stop</goal>
            </goals>
            <phase>post-integration-test</phase>
            <configuration>
              <runtimeVersion>${sonar.version}</runtimeVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>2.12.4</version>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <parallel>classes</parallel>
          <threadCount>5</threadCount>
          <systemProperties>
            <property>
              <name>jdbcDriver</name>
              <value>${test.jdbcDriver}</value>
            </property>
            <property>
              <name>jdbcUrl</name>
              <value>${test.jdbcUrl}</value>
            </property>
          </systemProperties>
          <includes>
            <include>**/*IT.java</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.12.4</version>
          <configuration>
            <includes>
              <include>**/*Test.java</include>
            </includes>
            <useSystemClassLoader>true</useSystemClassLoader>
            <parallel>both</parallel>
            <runOrder>random</runOrder>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
